{
    "schemaVersion": 1,
    "id": "utopia",
    "version": "v0.2-SNAPSHOT",
    "name": "Utopia",
    "description": "A global Croptopia plugin that adds food realism, furniture, storage, worldgen and cooking in separate modules",
    "authors": [
        "RedGrapefruit09"
    ],
    "contact": {
        "repo": "https://github.com/RedGrapefruit09/Utopia"
    },
    "license": "MIT",
    "icon": "assets/utopia/icon.png",
    "environment": "*",
    "entrypoints": {
        "client": [
            {
                "adapter": "kotlin",
                "value": "com.redgrapefruit.utopia.client.UtopiaClient"
            }
        ],
        "main": [
            {
                "adapter": "kotlin",
                "value": "com.redgrapefruit.utopia.Utopia"
            }
        ]
    },
    "mixins": [
        "utopia.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.11.6",
        "fabric": "*",
        "minecraft": "1.17.1",
        "croptopia": "1.6.1",
        "patchouli": "*"
    },
    "suggests": {
        "sodium": "*",
        "lithium": "*",
        "phosphor": "*",
        "hydrogen": "*"
    }
}
